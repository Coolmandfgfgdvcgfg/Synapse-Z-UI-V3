<Window x:Class="Synapse_Z_V3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Height="380" 
        Width="800"
        MinWidth="400" 
        MinHeight="300" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Border Background="#212120" 
            CornerRadius="3" 
            BorderBrush="#3b3b3a" 
            BorderThickness="1" 
            SnapsToDevicePixels="True">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- Fixed height for title bar -->
                <RowDefinition Height="*"/>
                <!-- Fill remaining space for content -->
            </Grid.RowDefinitions>

            <!-- Title Bar for Dragging -->
            <Grid Background="#2A2A2A" MouseDown="TitleBar_MouseDown">
                <Image Source="Images/synlogowhite.png" 
                       Width="138" Height="41"
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" Margin="4,0,0,0"/>
                <TextBlock VerticalAlignment="Center" Margin="118,0,428,0" Foreground="White" FontWeight="Bold" Height="26" FontSize="9"><Run Text="Z UI "/><LineBreak/><Run Text="V2.0.0"/><LineBreak/><Run Text=".0.0"/></TextBlock>
                <Grid Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-1,0,1">
                        <Button Style="{StaticResource TabButtonStyle}" Name="Button1" Width="20" Height="20" Background="Transparent" 
                                BorderBrush="Transparent" Click="Button_Click" MouseLeave="Button_MouseLeave" MouseEnter="Button_MouseEnter" Margin="0,0,8,0">
                            <Image Source="Images/codeico.png" Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource TabButtonStyle}" Name="Button2" Width="20" Height="20" 
                                BorderBrush="Transparent" Click="Button_Click" MouseLeave="Button_MouseLeave" MouseEnter="Button_MouseEnter" Background="#00000000">
                            <Image Source="Images/settingsic.png" Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                    <Rectangle Name="Underline" Fill="White" Height="2" Width="20" 
                               HorizontalAlignment="Left" Margin="0, 28, 0, 0" />
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="161*"/>
                    <ColumnDefinition Width="575*"/>
                    <ColumnDefinition Width="55*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <!-- Content goes here -->
            </Grid>
        </Grid>
    </Border>
</Window>
